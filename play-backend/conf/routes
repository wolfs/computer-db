# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Computers list (look at the default values for pagination parameters)
GET     /api/computers              controllers.Computers.list(p:Int ?= 0, s:Int ?= 2, f ?= "")
GET     /api/computers/:id          controllers.Computers.find(id:Long)
POST    /api/computers              controllers.Computers.save
PUT     /api/computers/:id          controllers.Computers.update(id:Long)
DELETE  /api/computers/:id          controllers.Computers.delete(id:Long)

POST    /api/login/:user            controllers.AngularApplication.login(user: String)
DELETE  /api/login/:user            controllers.AngularApplication.logout(user: String)

GET     /api/companies              controllers.Companies.list

# Map static resources from the /public folder to the / URL path
GET     /                           controllers.Assets.at(path="/public", file="index.html")
GET     /*file                      controllers.Assets.at(path="/public", file)

