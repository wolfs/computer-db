# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Default path will just redirect to the computer list
GET     /                           controllers.Application.index
GET     /angular                    controllers.AngularApplication.index
GET     /angular/list               controllers.AngularApplication.list

# Computers list (look at the default values for pagination parameters)
GET     /computers                  controllers.Application.list(p:Int ?= 0, s:Int ?= 2, f ?= "")
GET     /api/computers              controllers.Computers.list(p:Int ?= 0, s:Int ?= 2, f ?= "")
GET     /api/computers/:id          controllers.Computers.find(id:Long)
POST    /api/computers              controllers.Computers.save
PUT     /api/computers/:id          controllers.Computers.update(id:Long)
DELETE  /api/computers/:id          controllers.Computers.delete(id:Long)

POST    /api/login/:user            controllers.AngularApplication.login(user: String)
DELETE  /api/login/:user            controllers.AngularApplication.logout(user: String)

GET     /api/companies              controllers.Companies.list

# Add computer
GET     /computers/new              controllers.Application.create
POST    /computers                  controllers.Application.save

# Edit existing computer
GET     /computers/:id              controllers.Application.edit(id:Long)
POST    /computers/:id              controllers.Application.update(id:Long)

# Delete a computer
POST    /computers/:id/delete       controllers.Application.delete(id:Long)

# Javascript routing
GET     /assets/javascripts/routes          controllers.Application.javascriptRoutes

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /companyJson                controllers.Companies.companyJson

